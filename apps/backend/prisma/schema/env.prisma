enum EnvironmentType {
  DEVELOPMENT
  STAGING
  PRODUCTION
  CUSTOM
}

model Environment {
  id        String          @id @default(uuid()) @db.Uuid
  projectId String          @db.Uuid
  name      String
  type      EnvironmentType @default(DEVELOPMENT)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  project   Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  variables EnvVariable[]

  @@unique([projectId, name])
}

model EnvVariable {
  id             String    @id @default(uuid()) @db.Uuid
  environmentId  String    @db.Uuid
  key            String
  encryptedValue String
  iv             String
  authTag        String
  description    String?
  isRequired     Boolean   @default(false)
  validationRule String?
  rotationDays   Int?
  lastRotatedAt  DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  environment Environment          @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  versions    EnvVariableVersion[]

  @@unique([environmentId, key])
}

model EnvVariableVersion {
  id             String   @id @default(uuid()) @db.Uuid
  variableId     String   @db.Uuid
  encryptedValue String
  iv             String
  authTag        String
  changedBy      String   @db.Uuid
  createdAt      DateTime @default(now())

  variable EnvVariable @relation(fields: [variableId], references: [id], onDelete: Cascade)
}
