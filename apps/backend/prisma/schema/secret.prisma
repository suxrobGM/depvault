enum SharedSecretStatus {
  PENDING
  VIEWED
  EXPIRED
}

enum SecretAuditAction {
  CREATED
  VIEWED
  EXPIRED
}

model SharedSecret {
  id               String             @id @default(uuid()) @db.Uuid
  creatorId        String             @db.Uuid
  token            String             @unique
  encryptedPayload String
  iv               String
  authTag          String
  passwordHash     String?
  status           SharedSecretStatus @default(PENDING)
  expiresAt        DateTime
  viewedAt         DateTime?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  creator   User             @relation(fields: [creatorId], references: [id])
  auditLogs SecretAuditLog[]
}

model SecretAuditLog {
  id        String            @id @default(uuid()) @db.Uuid
  secretId  String            @db.Uuid
  action    SecretAuditAction
  ip        String?
  createdAt DateTime          @default(now())

  secret SharedSecret @relation(fields: [secretId], references: [id], onDelete: Cascade)
}
